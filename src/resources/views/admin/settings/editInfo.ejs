<%- msgErr.length ? `
<p class="alert alert-danger">${msgErr}</p>
` : ""%>
<form action="" method="post">
  <div class="form-group row d-flex justify-content-center">
    <label for="name" class="col-sm-2 col-form-label">Tên người dùng</label>
    <div class="col-sm-6">
      <input
        type="text"
        name="name"
        placeholder="Nhập tên ..."
        class="form-control"
        value="<%= user.name %>"
      />
    </div>
  </div>
  <span class="text-danger d-flex justify-content-center mb-3"
    ><%= validateUtil.getError(errors, "name") %></span
  >
  <div class="form-group row d-flex justify-content-center">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-6">
      <input
        type="text"
        name="email"
        placeholder="Nhập tên email ..."
        class="form-control"
        value="<%= user.email %>"
      />
    </div>
  </div>
  <span class="text-danger d-flex justify-content-center mb-3"
    ><%= validateUtil.getError(errors, "email") %></span
  >
  <div class="form-group row d-flex justify-content-center">
    <label for="phone" class="col-sm-2 col-form-label">Số điện thoại</label>
    <div class="col-sm-6">
      <input
        type="text"
        name="phone"
        placeholder="Nhập tên số điện thoại ..."
        class="form-control"
        value="<%= user.phone %>"
      />
    </div>
  </div>
  <span class="text-danger d-flex justify-content-center mb-3"
    ><%= validateUtil.getError(errors, "phone") %></span
  >
  <div class="form-group row d-flex justify-content-center">
    <label for="address" class="col-sm-2 col-form-label">Địa chỉ</label>
    <div class="col-sm-6">
      <input
        type="text"
        name="address"
        placeholder="Nhập tên address ..."
        class="form-control"
        value="<%= user.address %>"
      />
    </div>
  </div>
  <span class="text-danger d-flex justify-content-center mb-3"
    ><%= validateUtil.getError(errors, "address") %></span
  >
  <div class="d-flex justify-content-center">
    <button class="btn btn-primary" type="submit">Lưu</button>
  </div>
</form>
