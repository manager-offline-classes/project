<a href="<%= redirectPath.ADMIN_ROLE_INDEX%>" class="text-dark"
  ><i class="fas fa-2x fa-arrow-alt-circle-left"></i
></a>

<%- msgErr.length ? `
<p class="alert alert-danger">${msgErr}</p>
` : ""%>
<form action="" method="post" autocomplete="off">
  <div class="mb-3">
    <label for="">Tên</label>
    <input
      type="text"
      name="nameRole"
      placeholder="Tên Role..."
      class="form-control"
      value="<%= role.name %>"
    />
    <span class="text-danger"
      ><%= validateUtil.getError(errors, "nameRole") %></span
    >
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="29%">Module</th>
        <th>Quyền</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Quản lý người dùng</td>
        <td>
          <div class="row">
            <div class="col">
              <input type="checkbox" id="usersRead" name="permission"
              value="users.read" <%= permissionUtil.get(permissions,
              "users.read") && "checked" %> />
              <label for="usersRead">Xem</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="usersAdd"
              value="users.add" <%= permissionUtil.get(permissions, "users.add")
              && "checked" %> />
              <label for="usersAdd">Thêm</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="usersUpdate"
              value="users.update" <%= permissionUtil.get(permissions,
              "users.update") && "checked" %> />
              <label for="usersUpdate">Sửa</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="usersDelete"
              value="users.delete" <%= permissionUtil.get(permissions,
              "users.delete") && "checked" %> />
              <label for="usersDelete">Xóa</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="usersPermission"
              value="users.permission" <%= permissionUtil.get(permissions,
              "users.permission") && "checked" %> />
              <label for="usersPermission">Phân quyền</label>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td>Quản lý role</td>
        <td>
          <div class="row">
            <div class="col">
              <input type="checkbox" name="permission" id="rolesRead"
              value="roles.read" <%= permissionUtil.get(permissions,
              "roles.read") && "checked" %> />
              <label for="rolesRead">Xem</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="rolesAdd"
              value="roles.add" <%= permissionUtil.get(permissions, "roles.add")
              && "checked" %> />
              <label for="rolesAdd">Thêm</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="rolesUpdate"
              value="roles.update" <%= permissionUtil.get(permissions,
              "roles.update") && "checked" %> />
              <label for="rolesUpdate">Sửa</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="rolesDelete"
              value="roles.delete" <%= permissionUtil.get(permissions,
              "roles.delete") && "checked" %> />
              <label for="rolesDelete">Xóa</label>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td>Quản lý khóa học</td>
        <td>
          <div class="row">
            <div class="col">
              <input type="checkbox" name="permission" id="coursesRead"
              value="courses.read" <%= permissionUtil.get(permissions,
              "courses.read") && "checked" %> />
              <label for="coursesRead">Xem</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="coursesAdd"
              value="courses.add" <%= permissionUtil.get(permissions,
              "courses.add") && "checked" %> />
              <label for="coursesAdd">Thêm</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="coursesUpdate"
              value="courses.update" <%= permissionUtil.get(permissions,
              "courses.update") && "checked" %> />
              <label for="coursesUpdate">Sửa</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="coursesDelete"
              value="courses.delete" <%= permissionUtil.get(permissions,
              "courses.delete") && "checked" %> />
              <label for="coursesDelete">Xóa</label>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td>Quản lý lớp học</td>
        <td>
          <div class="row">
            <div class="col">
              <input type="checkbox" name="permission" id="classesRead"
              value="classes.read" <%= permissionUtil.get(permissions,
              "classes.read") && "checked" %> />
              <label for="classesRead">Xem</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="classesAdd"
              value="classes.add" <%= permissionUtil.get(permissions,
              "classes.add") && "checked" %> />
              <label for="classesAdd">Thêm</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="classesUpdate"
              value="classes.update" <%= permissionUtil.get(permissions,
              "classes.update") && "checked" %> />
              <label for="classesUpdate">Sửa</label>
            </div>
            <div class="col">
              <input type="checkbox" name="permission" id="classesDelete"
              value="classes.delete" <%= permissionUtil.get(permissions,
              "classes.delete") && "checked" %> />
              <label for="classesDelete">Xóa</label>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <div>
    <input type="hidden" name="_method" value="PATCH" />
    <button type="submit" class="btn btn-primary">Sửa</button>
  </div>
</form>
