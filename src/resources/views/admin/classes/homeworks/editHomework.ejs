<a href="<%= `${redirectPath.ADMIN_CLASS_HOMEWORK}${exercise.Class.id}`%>" class="text-dark"
    ><i class="fas fa-2x fa-arrow-alt-circle-left"></i
  ></a>
  <%- msgErr.length ? `
<p class="alert alert-danger">${msgErr}</p>
` : ""%>
<h2>Sửa bài tập lớp : <%= exercise.Class.id %></h2>
<form action="" method="post">
    <div class="form-group row">
      <label for="name" class="col-sm-12 col-form-label">Tiêu đề:</label>
      <div class="col-sm-6">
        <input
          type="text"
          name="title"
          placeholder="Tiêu đề ..."
          class="form-control"
          value="<%= exercise.title %>"
        />
      </div>
    </div>
    <span class="text-danger mb-3"
      ><%= validateUtil.getError(errors, "title") %> </br></span
    >
    
    <div class="form-group row">
        <label for="" class="col-sm-12 col-form-label">Tài liệu:</label>
        <div class="col-sm-6">
          <input
            type="text"
            name="attachment"
            placeholder="Nhập tài liệu ..."
            class="form-control"
            value="<%= exercise.attachment %>"
          />
        </div>
      </div>
      <span class="text-danger mb-3"
        ><%= validateUtil.getError(errors, "attachment") %> </br></span
      >
    <div class="form-group row">
        <label for="name" class="col-sm-12 col-form-label">Chi tiết bài tập:</label>
        
        <textarea
          name="content"
          id=""
          cols=""
          rows="4"
          placeholder="Chi tiết ..."
          class="form-control"
          type="text"
        ><%= exercise.content %></textarea>
    </div>
      <span class="text-danger mb-3" 
        ><%= validateUtil.getError(errors, "content") %> </br></span
      >

    
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    
    <input type="hidden" name="_method" value="PATCH" />
  </form>