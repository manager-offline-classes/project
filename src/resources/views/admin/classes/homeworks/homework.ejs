<a href="<%= redirectPath.CLASS_LIST%>" class="text-dark"
  ><i class="fas fa-2x fa-arrow-alt-circle-left"></i
></a>
<%- msgErr.length ? `
<p class="alert alert-danger">${msgErr}</p>
` : ""%> <%- msgSuccess.length ? `
<p class="alert alert-success">${msgSuccess}</p>
` : ""%>
<h2>Bài tập về nhà lớp: <%= classItem.name %></h2>

<a
  href="<%= `${redirectPath.ADMIN_CLASS_ADD_HOMEWORK}${classItem.id}`%>"
  class="btn btn-primary mb-2"
  >Thêm<i class="fas fa-plus fa-lg ml-2"></i
></a>
<div class="row">
  <div class="col-12 col-sm-8 col-lg-12">
    <ul class="list-group">
      <% exercises.forEach((exercise)=> { %>
      <div
        class="list-group-item list-group-item-action d-flex align-items-center"
      >
        <a
          href="<%= `${redirectPath.ADMIN_CLASS_DETAIL_HOMEWORK}${exercise.id}` %>"
          class="col-lg-11"
        >
          <div class="flex-column"><%= exercise.title %></div>
          <div></div>
        </a>

        <a
          href="<%= `${redirectPath.ADMIN_CLASS_EDIT_HOMEWORK}${exercise.id}` %>"
          class="ml-4"
          ><i class="fas fa-edit" style="color: #ffd43b"></i>
        </a>
        <form
          action="<%= `${redirectPath.ADMIN_CLASS_DELETE_HOMEWORK}${exercise.id}` %>"
          onsubmit="return confirm('<%= messageInfo.CHECK_DELETE%>')"
          method="post"
          class="ml-3"
        >
          <button type="submit" class="btn btn-link p-0">
            <i class="fas fa-trash-alt" style="color: #ff0000"></i>
          </button>
          <input type="hidden" name="_method" value="DELETE" />
        </form>
      </div>
      <% }) %>

