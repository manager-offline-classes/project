<a href="<%= redirectPath.LOGIN_AUTH%>" class="text-dark"
  ><i class="fas fa-2x fa-arrow-alt-circle-left"></i
></a>
<%- msgErr.length ? `
<p class="alert alert-danger">${msgErr}</p>
` : ""%>

<p class="login-box-msg">Nhập mã xác minh</p>
<form action="" method="post">
  <div class="mb-3">
    <input
      type="text"
      name="otp"
      class="form-control"
      placeholder="Nhập mã ..."
    />
  </div>
  <div class="d-grid">
    <button type="submit" class="btn btn-primary">Xác minh</button>
  </div>
  <div>
    <a href="<%= redirectPath.RESEND_OTP_AUTH %>">Gửi lại mã xác minh</a>
  </div>
</form>
