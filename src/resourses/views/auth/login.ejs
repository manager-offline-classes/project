<p class="login-box-msg">SIGN IN</p>
<%- msgErr.length ? `
<p class="alert alert-danger">${msgErr}</p>
` : ""%> <%- msgSuccess.length ? `
<p class="alert alert-success">${msgSuccess}</p>
` : ""%>
<form action="" method="post">
  <div class="input-group mb-3">
    <input name="email" type="email" class="form-control" placeholder="Email" />
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-envelope"></span>
      </div>
    </div>
  </div>
  <div class="input-group mb-3">
    <input
      name="password"
      type="password"
      class="form-control"
      placeholder="Password"
    />
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-lock"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div class="icheck-primary">
        <input type="checkbox" id="remember" />
        <label for="remember"> Nhớ </label>
      </div>
    </div>
    <!-- /.col -->
    <div class="col-4">
      <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
    </div>
    <!-- /.col -->
  </div>
</form>

<div class="social-auth-links text-center mb-3">
  <p>- Hoặc -</p>
  <a href="/auth/facebook/redirect" class="btn btn-block btn-primary">
    <i class="fab fa-facebook mr-2"></i> Đăng nhập bằng facebook
  </a>
  <a href="/auth/google/redirect" class="btn btn-block btn-danger">
    <i class="fab fa-google-plus mr-2" ></i> Đăng nhập bằng email
  </a>

  <a href="/auth/github/redirect" class="btn btn-block btn-dark">
    <i class="fa-brands fa-github mr-2"></i></i> Đăng nhập bằng github
  </a>
</div>
<!-- /.social-auth-links -->

<p class="mb-1">
  <a href="/auth/forgetPw">Quên mật khẩu</a>
</p>
